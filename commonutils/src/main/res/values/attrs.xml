<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaskedEditText">
        <attr name="mask" format="string" />
        <attr name="allowed_chars" format="string" />
        <attr name="denied_chars" format="string" />
        <attr name="char_representation" format="string" />
    </declare-styleable>

    <attr name="custom_typeface" format="string" />
    <declare-styleable name="FontButton">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontCheckedTextView">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontCheckbox">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontEditText">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontMaskEditText">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontRadioButton">
        <attr name="custom_typeface" />
    </declare-styleable>
    <declare-styleable name="FontTextView">
        <attr name="custom_typeface" />
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="indicatorBackground" format="reference"/>
        <attr name="marginSize" format="dimension"/>
        <attr name="allowDisplaySingle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TypewriterFontTextView">
        <attr name="scheduled_text" format="string" />
        <attr name="text_anim_time_limit" format="integer" />
        <attr name="text_anim_delay" format="integer" />
        <attr name="text_anim_looping" format="boolean" />
        <attr name="text_anim_start" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PatternedEditText">
        <attr name="pattern" format="string" />
        <attr name="alwaysVisibleCharCount" format="integer" />
    </declare-styleable>

    <attr name="max_width" format="dimension" />
    <attr name="max_height" format="dimension" />
    <declare-styleable name="FrameLayoutMaxSize">
        <attr name="max_width" />
        <attr name="max_height" />
    </declare-styleable>
    <declare-styleable name="LinearLayoutMaxSize">
        <attr name="max_width" />
        <attr name="max_height" />
    </declare-styleable>
    <declare-styleable name="RelativeLayoutMaxSize">
        <attr name="max_width" />
        <attr name="max_height" />
    </declare-styleable>
    <declare-styleable name="ScrollViewMaxSize">
        <attr name="max_width" />
        <attr name="max_height" />
    </declare-styleable>

</resources>